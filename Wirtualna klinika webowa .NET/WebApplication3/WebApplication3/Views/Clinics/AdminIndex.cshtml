@model IEnumerable<WebApplication3.Clinic>

@{
    ViewBag.Title = "Lista klinik - widok administratora";
}

<h2>Lista klinik</h2>

<th>
    @Html.ActionLink("Powrót", "Index", "Admin")
</th>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClinicAddress_Country)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClinicAddress_City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClinicAddress_Street)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClinicAddress_StreetNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClinicAddress_HomeNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClinicAddress_PostalCode)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClinicAddress_Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClinicAddress_City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClinicAddress_Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClinicAddress_StreetNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClinicAddress_HomeNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClinicAddress_PostalCode)
            </td>
            <td>
                @Html.ActionLink("Edycja", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }) 
                @*@Html.ActionLink("Usuń", "Delete", new { id = item.Id })*@
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Dodaj klinikę", "Create", "Clinics", htmlAttributes: new { @class = "btn btn-primary btn-lg" })
</p>