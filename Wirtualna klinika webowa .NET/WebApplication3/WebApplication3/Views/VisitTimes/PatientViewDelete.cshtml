@model WebApplication3.VisitTime

@{
    ViewBag.Title = "PatientViewDelete";
}

<h2>Usuń wizytę</h2><br/>

<h3>Czy na pewno chcesz anulować wizytę?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            Doktor
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Doctor.Name)
            @Html.DisplayFor(model => model.Doctor.Surname)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
        <input type="submit" value="Anuluj" class="btn btn-default" /> | 
        <a href='@Url.Action("PatientViewDetails", "VisitTimes", new { id = Model.Id })' class="btn btn-default">Wróć do ekranu wizyty</a><br />
        </div>
    }
</div>