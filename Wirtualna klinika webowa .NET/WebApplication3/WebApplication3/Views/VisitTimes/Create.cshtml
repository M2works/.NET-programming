@model WebApplication3.VisitTime

@{
    ViewBag.Title = "Zarezerwuj wizytę";
    Verification v = new Verification(Request);
}

<h2>Zarezerwuj wizytę</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Date)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Doctor, "Doktor", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Doctor.Name)
                @Html.DisplayFor(model => model.Doctor.Surname)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zarezerwuj" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Wróć do poprzedniego widoku", "DisplayList", "Doctors", null, null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
